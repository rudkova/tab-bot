{
  "name": "tab-bot",
  "version": "1.0.0",
  "type": "module",
  "description": "A telegram bot which remind you about expiring medicines",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "watch": "tsc --watch",
    "test": "jest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "env:copy": "cp .env.example .env"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.30.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.7",
    "eslint": "^9.30.0",
    "husky": "^9.1.7",
    "jest": "^30.0.3",
    "lint-staged": "^16.1.2",
    "prettier": "3.6.2",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0"
  },
  "dependencies": {
    "dotenv": "^17.0.0",
    "sqlite3": "^5.1.7",
    "telegraf": "^4.16.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,yml,yaml}": "prettier --write"
  }
}
